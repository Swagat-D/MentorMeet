# Trust proxy configuration
TRUST_PROXY=1

# IP whitelist for admin access (optional)
ADMIN_IP_WHITELIST=192.168.1.100,10.0.0.50

# Rate limiting configuration (stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AUTH_RATE_LIMIT_MAX_REQUESTS=3

# OTP configuration (more secure in production)
OTP_EXPIRES_IN=5
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3
OTP_RATE_LIMIT_WINDOW=3600000
OTP_RATE_LIMIT_MAX=2

# Security headers
HELMET_CSP_ENABLED=true
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging level (less verbose in production)
LOG_LEVEL=warn